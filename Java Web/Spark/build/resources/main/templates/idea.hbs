{{#partial "content"}}
    <h1>{{idea.title}} Details</h1>
    <h2>{{idea.voteCount}} Voters</h2>
    <ul>
        {{#each idea.voters}}
            <li>{{this}}</li>
        {{/each}}
    </ul>

    <form action="/ideas/{{idea.slug}}/vote" method="post">
        <button>Vote</button>
    </form>

    <a href="/ideas">Back</a>

{{/partial}}

{{#partial "title"}}
    Course Idea - {{idea.title}}
{{/partial}}

{{>base.hbs}}